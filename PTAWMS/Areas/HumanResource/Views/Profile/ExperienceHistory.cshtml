            }
            @*<tr class=@className>*@
            <tr>
                <td style="width:15%;">
                    @Html.DisplayFor(modelItem => item.OrganisationName)
                </td>
                <td style="width:15%;">
                    @Html.DisplayFor(modelItem => item.OrgAddress)
                </td>
