<script type="text/javascript">

    $(function selectTab() {
        var activeTab = location.href;
        console.log(activeTab);
        if (activeTab.toLowerCase().indexOf("qualification") >= 0)
            $("#btnOpenQualification").trigger("click");
        else if (activeTab.toLowerCase().indexOf("dependent") >= 0)
            $("#btnOpenDependents").trigger("click");
        else if (activeTab.toLowerCase().indexOf("prejobhistory") >= 0)
            $("#btnOpenExperience").trigger("click");
        else if (activeTab.toLowerCase().indexOf("transfer") >= 0)
            $("#btnOpenPostingTransfer").trigger("click");
        else if (activeTab.toLowerCase().indexOf("appreciation") >= 0)
            $("#btnOpenAppreciation").trigger("click");
        else if (activeTab.toLowerCase().indexOf("warning") >= 0)
            $("#btnOpenWarning").trigger("click");
        else if (activeTab.toLowerCase().indexOf("training") >= 0)
            $("#btnOpenTraining").trigger("click");
        else if (activeTab.toLowerCase().indexOf("promotion") >= 0)
            $("#btnOpenPromotion").trigger("click");
        else if (activeTab.toLowerCase().indexOf("assets") >= 0)
            $("#btnOpenAssets").trigger("click");
        else if (activeTab.toLowerCase().indexOf("leave") >= 0)
            $("#btnOpenLeaves").trigger("click");
        else
            $("#btnOpenPersonal").trigger("click");

    })


    function fileCheck() {
        var obj = $('#ImageData');
        var file_size = obj[0].files[0].size;

        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp', 'doc', 'docx', 'pdf'];
        if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {

            $("#errMsg").show();
            $("#errMsg").html("Invalid File (Only '.jpeg', '.jpg', '.png', '.gif', '.bmp', '.doc', '.docx', '.pdf' formats are allowed.)");
            $("#ImageData").addClass('form-group has-error');
            $("#divFileUpload").addClass('form-group has-error');
            return false;
        }
        if (file_size > 2097152) {
            $("#errMsg").show();
            $("#errMsg").html("Attached File size is exceeded from 2 MB.");
            $("#ImageData").addClass('form-group has-error');
            $("#divFileUpload").addClass('form-group has-error');
            return false;
        }
        $("#errMsg").hide();
        return true;
    }

</script>

