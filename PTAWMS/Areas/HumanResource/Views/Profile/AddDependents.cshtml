@model PTAWMS.Areas.HumanResource.BusinessLogic.ModelEmpDependents

<div class="modal-content">
    <div class="widget-header widget-header-small">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel"><i class="ace-icon fa fa-check"></i>Dependent</h4>
        </div>
    </div>


    @using (Html.BeginForm("AddExpDependent", "Profile", FormMethod.Post, new { id = "AddDependent", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.ID)
        @Html.AntiForgeryToken()
        <div class="modal-body">
            
                <div class="tab-content">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.RelationshipID, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @*@Html.EditorFor(model => model.Relationship, new { htmlAttributes = new { @class = "form-control" } })*@
                                @*@Html.EditorFor(model => model.Relationship, new { htmlAttributes = new { @class = "form-control", @required = "required" } })*@
                                @Html.DropDownListFor(model => model.RelationshipID, Model.RelationshipList, "Select Relationship", new { @class = "form-control", @required = "required" })

                                @Html.ValidationMessageFor(model => model.RelationshipList, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="control-label col-md-4">CNIC/Relationship Foam</label>
                            <div class="col-md-6">
                                <input type="file" class="form-control" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="control-label col-md-4"></div>
                            <div class="col-md-6">
                                @Html.CheckBox("MedicalFacilityAllowed")<label>Medical Facility Allowed</label>
                            </div>
                        </div>
                        <h3 class="header smaller lighter block">Nominations</h3>
                        <span class="section"></span>



                        <div class="form-group">
                            @if (ViewBag.AllowBenevolentFund == true)
                            {
                                <div class="col-md-4">
                                    @Html.CheckBox("NominationsBenevolentFund")<label>Benevolent Fund</label>
                                </div>
                            }
                            @if (ViewBag.Allowctx == true)
                            {
                                <div class="col-md-4">
                                    @Html.CheckBox("CPF")<label>CPF</label>
                                </div>
                            }
                            @if (ViewBag.AllowProvidentFund == true)
                            {
                                <div class="col-md-4">
                                    @Html.CheckBox("ProvidentFund")<label>Provident Fund</label>
                                </div>
                            }
                        </div>
                        <div class="form-group">
                            @if (ViewBag.AllowGraduity == true)
                            {
                                <div class="col-md-4">
                                    @Html.CheckBox("Graduity")<label>Graduity</label>
                                </div>
                            }
                            @if (ViewBag.AllowDeathCompensation == true)
                            {
                                <div class="col-md-4">
                                    @Html.CheckBox("DeathCompensation")<label>Death Compensation</label>
                                </div>
                            }

                        </div>





                        <div class="form-group">
                            <div class="control-label col-md-4"></div>
                            <div class="col-md-6">
                                <small class="text-primary">Change Request Subject to HR Approval.</small>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-10">
                                <input type="submit" id="SaveEmpPersonalInfo" value="Save" class="btn btn-default btn-success" />
                                <input type="button" id="btnCancel" value="Cancel" class="btn btn-primary" data-dismiss="modal" />
                            </div>
                        </div>

                    </div>
                </div>
            
        </div>
    }



</div>


           

