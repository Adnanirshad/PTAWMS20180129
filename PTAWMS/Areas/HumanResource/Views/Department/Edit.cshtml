@model PTAWMS.Models.HR_Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ PTAWMS.Models.ViewUserEmp user = (PTAWMS.Models.ViewUserEmp)HttpContext.Current.Session["LoggedUser"]; } 

  
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="~/Home/Index">Home</a>
				</li>
                <li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="~/HumanResource/Department">Divisions</a>
				</li>
				<li class="active">Edit</li>
			</ul><!-- /.breadcrumb -->
		</div>

        <div class="col-md-8 col-sm-12 col-xs-12">
        <br />
        <div class="widget-box">
	        <div class="widget-header widget-header-blue widget-header-flat">
		        <h4 class="widget-title lighter">Edit Division</h4>
	        </div>

	        <div class="widget-body">
		        <div class="widget-main">
					@using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
    
                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.DeptID)
                            @Html.HiddenFor(model => model.ODeptID)

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-12 col-xs-12" for="first-name">Division</label>
                                <div class="col-md-4 col-sm-12 col-xs-12">  
                                    @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DepartmentName)
                                    <h6 style="color:red">@ViewBag.error</h6>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2"> 
                                @Html.CheckBox("Status", new { @class = "flat" })<label >Status</label>
                                @Html.ValidationMessageFor(model => model.Status)
                                </div>
                            </div>   
                           <div class="form-group">
                                <div class="col-md-offset-3 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default btn-success" />
                                  @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary " })
                                </div>
                            </div>
                        </div>
                    }
		        </div><!-- /.widget-main -->
	        </div><!-- /.widget-body -->
        </div>
            </div>
    </div>
</div>

