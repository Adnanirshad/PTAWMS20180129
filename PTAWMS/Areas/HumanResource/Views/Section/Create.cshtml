@model PTAWMS.Models.HR_Section

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="~/Home/Index">Home</a>
				</li>
				<li class="active">Create Department</li>
			</ul><!-- /.breadcrumb -->
		</div>

        <div class="col-md-8 col-sm-12 col-xs-12">
        <br />
        <div class="widget-box">
	        <div class="widget-header widget-header-blue widget-header-flat">
		        <h4 class="widget-title lighter">Create New Department</h4>
	        </div>

	        <div class="widget-body">
		        <div class="widget-main">
					@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)       
       <div class="form-group" id="DeptDivID">
                <label class="control-label col-md-3">Division</label>
                <div class="col-md-3">
                    @Html.DropDownList("DepartmentID",null,new { @class = "input-medium valid col-lg-12 col-md-12 col-sm-12 col-xs-12"})                                      
                </div>
            </div>
        <div class="form-group">
            <label class="control-label col-md-3">Department</label>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.SectionName,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SectionName)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
                 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}

		        </div><!-- /.widget-main -->
	        </div><!-- /.widget-body -->
        </div>
            </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/HumanResource/Section/DpDivDeptCreate.js")"></script>
