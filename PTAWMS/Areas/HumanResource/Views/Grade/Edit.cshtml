@model PTAWMS.Models.HR_Grade

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="~/Home/Index">Home</a>
                    <li class="active">Company</li>
                    <li class="active">Grades</li>
				</li>
				<li class="active">Edit</li>
			</ul><!-- /.breadcrumb -->
		</div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="page-header">
            <h1>
			    Grades
			    <small>
                    <i class="ace-icon fa fa-angle-double-right"></i>
                    Edit Grades           												
			    </small>
			</h1>
        </div>
                    <div class="widget-box">
	        <div class="widget-body">
		        <div class="widget-main">
				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GrdID)

        <div class="form-group">
            @Html.LabelFor(model => model.GradeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GradeName)
                @Html.ValidationMessageFor(model => model.GradeName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NormalOTAmount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NormalOTAmount)
                @Html.ValidationMessageFor(model => model.NormalOTAmount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RestOTAmount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RestOTAmount)
                @Html.ValidationMessageFor(model => model.RestOTAmount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GZOTAmount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GZOTAmount)
                @Html.ValidationMessageFor(model => model.GZOTAmount)
            </div>
        </div>

       <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}
		        </div><!-- /.widget-main -->
	        </div><!-- /.widget-body -->
        </div>
            </div>
    </div>
</div>