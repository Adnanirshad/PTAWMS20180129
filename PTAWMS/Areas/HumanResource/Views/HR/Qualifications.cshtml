@model List<PTAWMS.Models.ViewEmpQualification>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ PTAWMS.Models.ViewUserEmp user = (PTAWMS.Models.ViewUserEmp)HttpContext.Current.Session["LoggedUser"]; }
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="~/Home/Index">Home</a>
                <li class="active">Qualifications</li>
                </li>
            </ul><!-- /.breadcrumb -->
        </div>


        <div class="page-content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="clearfix">
                        <div class="page-header">
                            <h1>
                                Employee Qualifications 
                                <small>
                                    <i class="ace-icon fa fa-angle-double-right"></i>
                                    List of @ViewBag.SearchData
                                    <div class="pull-right tableTools-container"></div>
                                </small>
                            </h1>
                        </div>
                        <!-- div.table-responsive
                        <!-- div.dataTables_borderWrap -->

                        <div>
                            <div>
                                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr role="row">
                                            <th>
                                                Employee Name
                                            </th>
                                            <th>
                                                Degree Name
                                            </th>
                                            <th>
                                                Institute
                                            </th>
                                            <th>
                                                Pass Year
                                            </th>
                                            <th class="hidden-480">
                                                Grade
                                            </th>
                                            <th class="hidden-480 hidden-print">
                                                Distinction
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    
@Html.ActionLink(item.FullName, "EmpDetails", "Profile", new { ID = @user.EmpID, area = "HumanResource", @class = "qualification" }, "#qualification")

                                                </td>
                                                <td>
                                                    @item.Degree
                                                    
                                                </td>
                                                <td>
                                                    @item.Institute
                                                </td>

                                                <td>
                                                    @item.EndSession

                                                </td>

                                                <td>
                                                    @item.Grade
                                                </td>
                                                <td class="hidden-print">
                                                    @item.distinction

                                                </td>
                                                
                                            </tr>
                                                        }
                                    </tbody>
                                </table>
                                @*<input id='hidType' type="hidden" value='@ViewBag.NotificationType' />*@
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-lg in" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id="divQualificationRemarks" style="display:block;">
            </div>
        </div>
    </div>
</div>

