@model PTAWMS.Models.Att_JobCardApp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
<form class ="form-inline" role="form">
        <div class="form-group">
            <h2>Edit Pending Job Cards <small></small></h2>
        </div>           
    </form> 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()  
   <div class="form-horizontal">
        <hr />
         @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.JobCardAppID)    
        <div style="margin-left:17%" >
             <input type="radio"  value="All" name="SelectionRB" checked="checked"/> Time Wise
             <input type="radio" value="Div" name="SelectionRB" /> Date Wise
            </div>  
        <br />
        <div class="form-group">
             <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">From Date</label>
            <div class="col-md-2">
                @Html.TextBoxFor(x => x.DateStarted, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date"})
                @Html.ValidationMessageFor(model => model.DateStarted)
            </div>
        </div>
        <div id="timewise"> 
        <div class="form-group">
             <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">Start Time</label>
            <div class="col-md-2">
                @Html.TextBoxFor(x => x.StartTime, "{0:HH:mm}", new { @class = "form-control", @type = "time"})
                @Html.ValidationMessageFor(model => model.StartTime)
            </div>
        </div>
            <div class="form-group">
             <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">End Time</label>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.EndTime, new { @class = "form-control",@type = "time",@Value="16:30"})
                @Html.ValidationMessageFor(model => model.EndTime)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Job Card</label>
            <div class="col-md-2">
                @Html.DropDownList("JCTypeID", null, new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth" })              
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Submited To</label>
            <div class="col-sm-4">
                @Html.DropDownList("SupervisorID", null, new { @class = "btn btn-default dropdown-toggle col-lg-6 col-md-6 col-sm-6" })
            </div>
        </div>
</div>  
        <div id="datewise">       
            <div class="form-group">
             <label class="control-label col-md-2 col-sm-2 col-xs-12" for="first-name">To Date</label>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.DateEnded, new { @class = "form-control",@type = "date"})
                @Html.ValidationMessageFor(model => model.DateEnded)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Job Card</label>
            <div class="col-md-2">
                @Html.DropDownList("JCTypeID", null, new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth" })              
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Submited To</label>
            <div class="col-sm-4">
                @Html.DropDownList("SupervisorID", null, new { @class = "btn btn-default dropdown-toggle col-lg-6 col-md-6 col-sm-6" })
            </div>
        </div>
</div>   
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}
</div>
                    </div>
    </div>
<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script type="text/javascript">  
    $(document).ready(function () {       
        $("#timewise").hide();
        $("#datewise").hide();
        var test = $("input[name='SelectionRB']:checked").val();
        if (test == "All") {
            $("#datewise").hide();
            $("#timewise").show();           
        }
        $("input[name$='SelectionRB']").click(function () {
            var test = $(this).val();
            if (test == "All") {
                $("#timewise").show();
                $("#datewise").hide();
            }
            else {
                $("#timewise").show();
                $("#datewise").hide();
            }
        });
        var test = $("input[name='SelectionRB']:checked").val();
        if (test == "Div") {
            $("#datewise").show();
            $("#timewise").hide();
        }
        $("input[name$='SelectionRB']").click(function () {
            var test = $(this).val();
            if (test == "Div") {
                $("#datewise").show();
                $("#timewise").hide();
            }
            else {
                $("#datewise").hide();
                $("#timewise").show();
            }
        });
    });
</script>