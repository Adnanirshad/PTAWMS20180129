@model PTAWMS.Models.PR_FinYear

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="col-lg-12">
    <div class="well bs-component">
        <form class="form-horizontal" action="~/Attendance/FinancialYear/Create" enctype="multipart/form-data" method="post">
             @Html.AntiForgeryToken()
            @Html.HiddenFor(model=>model.PFinYearID)
            <fieldset>
                <legend>Create New Financial Year</legend>
                <section class="col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label class="col-lg-3 col-md-3 col-sm-3 control-label">Name</label>
                        <div class="col-lg-5 col-md-5 col-sm-5">
                             @Html.TextBoxFor(x => x.FinYearName, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 col-md-3 col-sm-3 control-label">Start</label>
                        <div class="col-lg-5 col-md-5 col-sm-5">
                             @Html.TextBoxFor(x => x.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date"})
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 col-md-3 col-sm-3 control-label">End</label>
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            @Html.TextBoxFor(x => x.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date"}) 
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 col-md-3 col-sm-3 control-label"></label>
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            @Html.CheckBox("Status") <span>Active</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-md-10 col-sm-10 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            @Html.ActionLink("Cancel", "Index",null,new { @class = "btn btn-default " })
                        </div>
                    </div>
                </section>
            </fieldset>
        </form>
    </div>
</div>

