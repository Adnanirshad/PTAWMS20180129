@model PTAWMS.Models.Att_Holiday

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="~/Home/Index">Home</a>
                    <li class="active">Attendance</li>
                    <li class="active">Holiday</li>
				</li>
				<li class="active">Edit</li>
			</ul><!-- /.breadcrumb -->
		</div>
        <div class="col-md-8 col-sm-12 col-xs-12">
            <div class="page-header">
            <h1>
			    Holiday
			    <small>
                    <i class="ace-icon fa fa-angle-double-right"></i>
                    Edit Holiday             												
			    </small>
			</h1>
        </div>
                    <div class="widget-box">
	        <div class="widget-body">
		        <div class="widget-main">
				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.HolidayID)

         <div class="form-group">
            @Html.LabelFor(model => model.HolidayDate, new { @class = "control-label col-md-2"})
            <div class="col-md-3">
                  @Html.TextBoxFor(model => model.HolidayDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @id = "datetimepicker2" })
                    @Html.ValidationMessageFor(model => model.HolidayDate)
                <h6 style="color:red">@ViewBag.date</h6>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HolidayName, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.HolidayName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.HolidayName)
                <h6 style="color:red">@ViewBag.name</h6> 
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
              @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}
		        </div><!-- /.widget-main -->
	        </div><!-- /.widget-body -->
        </div>
            </div>
    </div>
</div>