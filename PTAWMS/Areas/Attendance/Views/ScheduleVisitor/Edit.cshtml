@model PTAWMS.Models.VMS_SVisitor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ PTAWMS.Models.ViewUserEmp user = (PTAWMS.Models.ViewUserEmp)HttpContext.Current.Session["LoggedUser"]; } 
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="~/Home/Index">Home</a>
                    <li class="active">Visitors Entry</li>
				</li>
				<li class="active">Visitors Request</li>
                <li class="active">Edit</li>
			</ul><!-- /.breadcrumb -->
		</div>

        <div class="col-md-8 col-sm-12 col-xs-12">
       <div class="page-header">
            <h1>
			   Visitors Requests
			    <small>
                    <i class="ace-icon fa fa-angle-double-right"></i>
                    Edit Visitors Request             												
			    </small>
			</h1>
        </div>
        <div class="widget-box">
	        <div class="widget-header widget-header-blue widget-header-flat">
		        <h4 class="widget-title lighter">Create New Visitor Entry</h4>
	        </div>

	        <div class="widget-body">
		        <div class="widget-main">
				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()  
    <div class="form-horizontal">
    <h2>Edit Schedule Visitor</h2>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.EmpID)

        <div class="form-group">
            <div class="control-label col-md-2">Visitor Name</div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.VisitorName,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VisitorName)
            </div>
        </div>
        <div class="form-group">
           <div class="control-label col-md-2">Company</div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Company,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Company)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div  class="col-md-6 col-sm-6 col-xs-6">
                @Html.CheckBox("VehicleAccess") <label>Vehicle Access</label> 
                @Html.ValidationMessageFor(model => model.VehicleAccess)
            </div>
        </div>      
        <div id ="VehicleAccessDiv">     
        <div class="form-group">
            <div class="control-label col-md-2">Vehicle No</div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.VehicleNo,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VehicleNo)
            </div>
        </div>
            </div>
        @*<div class="form-group">
           <div class="control-label col-md-2">Created Date</div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.CDateTime, new { @class = "form-control",@type = "date"})
                @Html.ValidationMessageFor(model => model.CDateTime)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">Approved Date</div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.ApprovedDate, new { @class = "form-control",@type = "date"})
                @Html.ValidationMessageFor(model => model.ApprovedDate)
            </div>
        </div>*@
        <div class="form-group">
             <div class="col-md-offset-2 col-md-10">
                 <input type="submit" value="Save" class="btn btn-default btn-success" />
                @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}	




		        </div><!-- /.widget-main -->
	        </div><!-- /.widget-body -->
        </div>
            </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script >
    $(document).ready(function () {
        $('#VehicleAccessDiv').hide();

        $('#VehicleAccess').change(function () {
            if ($(this).is(":checked")) {
                $("#VehicleAccessDiv").show();
            }
            else {
                $("#VehicleAccessDiv").hide();
            }
        });
        if (document.getElementById('VehicleAccess').checked) {
            $("#VehicleAccessDiv").show();
        } else {
            $("#VehicleAccessDiv").hide();
        }
    });
</script>