
@{
    ViewBag.Title = "EditDateWiseEntries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .EmpNoWi {
        width:100px;
    }
</style>
<br />
@using (Html.BeginForm("SaveEditEntriesDateWise", "AttManual", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <p class="h3">Edit Attendance For :  @Model.Date</p>
    <input hidden type="text" name="Count" id="Count" value="@Model.Count" />
    <input hidden type="text" name="Date" id="Date" value="@Model.Date" />
    <input hidden type="text" name="Criteria" id="Criteria" value="@Model.Criteria" />
    <input hidden type="text" name="CriteriaData" id="CriteriaData" value="@Model.CriteriaData" />
    var grid = new WebGrid(Model.list, canSort: false, canPage: false);
    int rowNum = 0;
    <div>
        @grid.GetHtml(columns:
            grid.Columns
            (
                grid.Column("Sr.No", format: item => rowNum = rowNum + 1),
                grid.Column("", format: (item) => Html.TextBox("Row" + (rowNum - 1).ToString(), (int)item.EmployeeID, new { @hidden = true })),
                grid.Column("", format: (item) => Html.TextBox("EmpDate" + (rowNum - 1).ToString(), (string)item.EmpDate, new { @hidden = true })),
                grid.Column("EmpNo", format: (item) => Html.Label("EmpNo" + (rowNum - 1).ToString(), (string)item.EmpNo)),
                grid.Column("Name", format: (item) => Html.Label("Name" + (rowNum - 1).ToString(), (string)item.EmpName)),
                 grid.Column("Code", format: (item) => Html.TextBox("DutyCode" + (rowNum - 1).ToString(), (string)item.DutyCode,new { style =" width:40px;" })),
                grid.Column("Start Time", format: (item) => Html.TextBox("DutyTime" + (rowNum - 1).ToString(), (string)item.DutyTime,new { style =" width:60px;" })),
                grid.Column("Shift Hours", format: (item) => Html.TextBox("ShiftTime" + (rowNum - 1).ToString(), (string)item.ShiftTime,new { style =" width:40px;" })),
                 grid.Column("Time In", format: (item) => Html.TextBox("TimeIn" + (rowNum - 1).ToString(), (object)item.TimeIn, new { style = " width:40px;" , @disabled="disabled" })),
                 grid.Column("Time Out", format: (item) => Html.TextBox("TimeOut" + (rowNum - 1).ToString(), (object)item.TimeOut, new { style = " width:40px;", @disabled="disabled"  })),
                grid.Column("T IN 1", format: (item) => Html.TextBox("TimeIn1" + (rowNum - 1).ToString(), (object)item.TimeIn1,new { style =" width:40px;" })),
                grid.Column("T O 1", format: (item) => Html.TextBox("TimeOut1" + (rowNum - 1).ToString(), (object)item.TimeOut1,new { style =" width:40px;" })),
                grid.Column("T IN 1", format: (item) => Html.TextBox("TimeIn2" + (rowNum - 1).ToString(), (object)item.TimeIn2,new { style =" width:40px;" })),
                grid.Column("T O 2", format: (item) => Html.TextBox("TimeOut2" + (rowNum - 1).ToString(), (object)item.TimeOut2,new { style =" width:40px;" })),
                grid.Column("T IN 3", format: (item) => Html.TextBox("TimeIn3" + (rowNum - 1).ToString(), (object)item.TimeIn3,new { style =" width:40px;" })),
                grid.Column("T O 3", format: (item) => Html.TextBox("TimeOut3" + (rowNum - 1).ToString(), (object)item.TimeOut3,new { style =" width:40px;"})),
                grid.Column("Work", format: (item) => Html.TextBox("Work" + (rowNum - 1).ToString(), (object)item.WorkMinutes, new {style =" width:40px;", @disabled="disabled" })),
                 grid.Column("Overtime", format: (item) => Html.TextBox("OT" + (rowNum - 1).ToString(), (object)item.OTMin, new {style =" width:40px;" ,@disabled="disabled" })),
                 grid.Column("Remarks", format: (item) => Html.TextBox("Remarks" + (rowNum - 1).ToString(), (object)item.Remarks, new {style =" width:60px;" }))
        //grid.Column("Late In", format: (item) => Html.TextBox("LateIn" + (rowNum - 1).ToString(), (object)item.LateIn)),
        //grid.Column("Late Out", format: (item) => Html.TextBox("LateOut" + (rowNum - 1).ToString(), (object)item.LateOut)),
        //grid.Column("Early In", format: (item) => Html.TextBox("EarlyIn" + (rowNum - 1).ToString(), (object)item.EarlyIn)),
        //grid.Column("Early Out", format: (item) => Html.TextBox("EarlyOut" + (rowNum - 1).ToString(), (object)item.EarlyOut))
            ), mode: WebGridPagerModes.Numeric)
    </div>
    <input type="submit" value="Submit" />
}
<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<style type="text/css">
    table
    {
        font-family: verdana,arial,sans-serif;
        font-size: 11px;
        color: #333333;
        border-width: 1px;
        border-color: #666666;
        border-collapse: collapse;
    }
    table th
    {
        border-width: 1px;
        padding: 5px;
