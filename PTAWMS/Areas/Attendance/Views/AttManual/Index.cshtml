@model IEnumerable<PTAWMS.Models.Att_DailyAttendance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
			<ul class="breadcrumb">
				<li>
					<i class="ace-icon fa fa-home home-icon"></i>
					<a href="~/Home/Index">Home</a>
                    <li class="active">Attendance</li>
				</li>
				<li class="active">Eidt Attendance</li>
			</ul><!-- /.breadcrumb -->
		</div>
        <div class="page-content">
         <div class="row">
			<div class="col-xs-12">
                <div class="page-header">
                <h1>
					Eidt Attendance
					<small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Edit Mannual Attendance 
                         <div class="pull-right tableTools-container"></div>                												
					</small>
							</h1>
                    </div>
	        <div class="widget-body">
		        <div class="widget-main">
          <form class="form-inline" action="~/Attendance/AttManual/Edit" enctype="multipart/form-data" method="post">
                  @Html.AntiForgeryToken()
            <fieldset>
                <legend>Edit Attendance Single Employee (Detailed)</legend>
                <div class="form-group">
                    <label >Date</label>
                    <input id="DateFrom" name="DateFrom" value="@ViewData["datef"]" type="date" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Emp No</label>
                    <input id="EmpNo" name="EmpNo" type="text" class="form-control" placeholder="EMP NO"/>
                </div>
                <input type="submit" value="Next"  class="btn btn-sm btn-success"/>
                
            </fieldset>
        </form>             
		        </div><!-- /.widget-main -->
	        </div><!-- /.widget-body -->
        </div>
            </div>
        
    </div>
</div>
<script src="~/assets/js/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/Attendance/EditAttendance/EditAttendance.js"></script>
<script src="~/Scripts/Attendance/EditAttendance/EmpInfoEditAtt.js"></script>
<script src="~/Scripts/Attendance/EditAttendance/RBSelection.js"></script>
<script type="text/javascript">
    $(function () {
        $('.focus :input').focus();
    });
</script>
