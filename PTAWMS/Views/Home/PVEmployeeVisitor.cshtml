@model List<PTAWMS.Helper.DMParentModel>
@{
    //Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}
<div class="row">
	<div class="col-md-12">
		<div class="widget-box transparent">
			<div class="widget-header widget-header-flat">
				<h4 class="widget-title lighter">
					<i class="ace-icon fa fa-star green"></i>
					Visitors Summary<small>
									<i class="ace-icon fa fa-angle-double-right"></i>
									Detail of Visitor's Visit
								</small>
				</h4>

				<div class="widget-toolbar">
					<a href="#" data-action="collapse">
						<i class="ace-icon fa fa-chevron-up"></i>
					</a>
				</div>
			</div>

			<div class="widget-body">
				<div class="widget-main no-padding">
                    <div class="col-md-5 col-sm-12">
                        <br />
                        <table id="dynamic-table-emp" class="table table-striped table-bordered table-hover dt-responsive">
                            <thead>
                                <tr class="table-header">
                                    <th class="hidden">
                                       EmpID
                                    </th>
                                    <th>
                                       Visitor Name
                                    </th>
                                    <th>Visits</th>
                                </tr>
	                        </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="hidden">
                                       @item.ID
                                    </td>
                                    <td >
                                    @Html.ActionLink(item.Name, "PVSVisitorDetail", "Home", new { visitorId = item.ID, EmpNo = @ViewBag.EmpNo}, new { @class = "btn btn-primary btn-link" })
                                </td> 
                                    <td >
                                       <b class="green">@item.Count</b> 
                                    </td>                                                                 
                                </tr>
                            }
                            </tbody>
                            </table>
                    </div>
                    <div class="col-md-7 col-sm-12">
                        @if(Model.Count()<2)
                        {
                        }
                        else if(Model.Count()<3)
                        {<br />
                        }
                        else if(Model.Count>3)
                        {
                            
                        <br />
                        <br />
                        <br />
                        }
                        <div id="barchart"></div>          
                    </div>
				</div><!-- /.widget-main -->
			</div><!-- /.widget-body -->
		</div><!-- /.widget-box -->
	</div><!-- /.col -->

</div>
@*<script src="~/assets/js/jquery-2.1.4.min.js"></script>*@
		<!-- inline scripts related to this page -->
		<script type="text/javascript">
		    $(document).ready(function () {
		        //initiate dataTables plugin
		        var myTableEmp =
				$('#dynamic-table-emp')
				//.wrap("<div class='dataTables_borderWrap' />")   //if you are applying horizontal scrolling (sScrollX)
				.DataTable({
				    "lengthChange": false,responsive: true,
				    "info": false,
				    "paging": false,
				    //"bFilter": false,
				    "scrollY": "140px",
				    "scrollCollapse": true,
				    "order": []
				});
                		       

		        //style the message box
		        var defaultCopyAction = myTableEmp.button(1).action();
		        myTableEmp.button(1).action(function (e, dt, button, config) {
		            defaultCopyAction(e, dt, button, config);
		            $('.dt-button-info').addClass('gritter-item-wrapper gritter-info gritter-center white');
		        });


		        var defaultColvisAction = myTableEmp.button(0).action();
		        myTableEmp.button(0).action(function (e, dt, button, config) {

		            defaultColvisAction(e, dt, button, config);


		            if ($('.dt-button-collection > .dropdown-menu').length == 0) {
		                $('.dt-button-collection')
						.wrapInner('<ul class="dropdown-menu dropdown-light dropdown-caret dropdown-caret" />')
						.find('a').attr('href', '#').wrap("<li />")
		            }
		            $('.dt-button-collection').appendTo('.tableTools-container .dt-buttons')
		        });

		        ////

		        setTimeout(function () {
		            $($('.tableTools-container')).find('a.dt-button').each(function () {
		                var div = $(this).find(' > div').first();
		                if (div.length == 1) div.tooltip({ container: 'body', title: div.parent().text() });
		                else $(this).tooltip({ container: 'body', title: $(this).text() });
		            });
		        }, 500);
   
		        var model = @Html.Raw(Json.Encode(Model))
                RenderBarChart(model);
		        

		    })
		</script>
  
