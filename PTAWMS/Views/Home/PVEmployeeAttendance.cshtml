@model PTAWMS.Helper.DMTMSParentModel
@{
    //Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}
<div class="row">
	<div class="col-md-12">
		<div class="widget-box transparent">
			<div class="widget-header widget-header-flat">
                 <div class="col-sm-6">
				    <h4 class="widget-title lighter">
					    <i class="ace-icon fa fa-star blue"></i>
					    Attendance Trend<small>
									    <i class="ace-icon fa fa-angle-double-right"></i>
									    Total number of Hours
								    </small>
				    </h4>
                     </div>
                <div class="col-sm-5">
												
											</div>
				<div class="widget-toolbar">
					<a href="#" data-action="collapse">
						<i class="ace-icon fa fa-chevron-up"></i>
					</a>
				</div>
			</div>

			<div class="widget-body">
				<div class="widget-main no-padding">
                    <div class="col-md-9 col-sm-12">
                        
                        <div id="lineChart"></div>          
                    </div>
                    <div class="col-md-3 col-sm-12">
                        <br />
                        <h5> @Html.ActionLink("Late In Minutes: "+@Model.LateIn, "TMSAttDetail", "Home", new { id = @ViewBag.EmpID, type="LateIn", FullName=@ViewBag.Name}, new { @class = "btn btn-primary btn-link" })</h5>
                        <div class="progress pos-rel">
							<div class="progress-bar progress-bar-danger" style="width:100%;"></div>
						</div>
                        <h5> @Html.ActionLink("Late Out Minutes: "+@Model.LateOut, "TMSAttDetail", "Home", new { id = @ViewBag.EmpID, type="LateOut", FullName=@ViewBag.Name}, new { @class = "btn btn-primary btn-link" })</h5>
                        <div class="progress pos-rel color-orange">
							<div class="progress-bar progress-bar-success" style="width:100%;"></div>
						</div>
                        <h5> @Html.ActionLink("Early In Minutes: "+@Model.EarlyIn, "TMSAttDetail", "Home", new { id = @ViewBag.EmpID, type="EarlyIn", FullName=@ViewBag.Name}, new { @class = "btn btn-primary btn-link" })</h5>
                        <div class="progress pos-rel">
							<div class="progress-bar" style="width:100%;"></div>
						</div>
                        <h5> @Html.ActionLink("Early Out Minutes: "+@Model.EarlyOut, "TMSAttDetail", "Home", new { id = @ViewBag.EmpID, type="EarlyOut", FullName=@ViewBag.Name}, new { @class = "btn btn-primary btn-link" })</h5>
                        <div class="progress pos-rel">
							<div class="progress-bar progress-bar-warning" style="width:100%;"></div>
						</div>
                    </div>
				</div><!-- /.widget-main -->
			</div><!-- /.widget-body -->
		</div><!-- /.widget-box -->
	</div><!-- /.col -->

</div>
<script type="text/javascript">
    $(document).ready(function () {
       
        var model = @Html.Raw(Json.Encode(Model))
               RenderLineChart(model.ChildList);
    });
</script>